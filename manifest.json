{
  "name": "Get Hugo Shortcodes",
  "version": "0.1",
  "description": "Get Hugo shortcodes for content from YouTube, Github, Twitter, Instagram, and Vimeo",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_icon": {
       "16": "images/ghs-16.png",
       "32": "images/ghs-32.png"
    },
    "default_popup": "popup.html",
    "default_title": "Hugo Shortcode Getter"
 },
  "permissions" : [
    "activeTab, declarativeContent, clipboardRead, tabs"
  ],
  "icons" : {
    "16" : "images/ghs-16.png",
    "32" : "images/ghs-32.png",
    "64" : "images/ghs-64.png",
    "128" : "images/ghs-128.png"
  },
  "manifest_version": 2
}
